{
    "name": "Slovak translations for OXID eShop",
    "vendor": "otrance",
    "type": "oxid",
    "license": "GPLv3",
    "desc": "Slovak language file translations for OXID eShop front end and admin panel",
    "tags": [
        "frontend",
        "admin",
        "translation",
        "language"
    ],
    "versions": {
        "4.9.2": {
            "project": "https://github.com/OXIDprojects/languages",
            "url": "https://github.com/OXIDprojects/languages/archive/master.zip",
            "supported": [
                "4.9",
                "4.8"
            ],
            "mapping": [
                {
                    "src": "application/translations/sk/",
                    "dest": "application/translations/sk/"
                },
                {
                    "src": "application/views/azure/sk/",
                    "dest": "application/views/azure/sk/"
                },
                {
                    "src": "application/views/admin/sk/",
                    "dest": "application/views/admin/sk/"
                },
                {
                    "src": "out/azure/img/lang/sk.png",
                    "dest": "out/azure/img/lang/"
                }
            ]
        }
    },
    "hooks": {
        "postinstall": {
            "type": "overlay",
            "message": "Please go to admin -> Master settings -> Languages. Create a new language by entering \"sk\" as locale and \"SlovenÄina\" as name. If you find any mistakes please feel free to register at the translation center.",
            "link": "http://translate.oxidforge.org"
        }
    }
}